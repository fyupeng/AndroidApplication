<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.CaptureHistoryActivity">

        <LinearLayout
                android:id="@+id/titleLayout"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@color/snow"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="70dp">
            <ImageView
                    android:id="@+id/comeBack"
                    android:layout_gravity="center"
                    android:background="@drawable/comeback"
                    android:layout_width="25dp"
                    android:layout_height="25dp">
            </ImageView>
            <TextView
                    android:textColor="@color/darkseagreen"
                    android:layout_marginLeft="15dp"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:layout_gravity="center"
                    android:text="拍照历史"
                    android:layout_width="310dp"
                    android:layout_height="40dp">
            </TextView>
        </LinearLayout>

        <LinearLayout
                android:background="#eeee"
                android:id="@+id/totalLayout"
                android:layout_marginTop="70dp"
                app:layout_constraintTop_toTopOf="@+id/titleLayout"
                android:layout_width="match_parent"
                android:layout_height="50dp">
            <TextView
                    android:paddingLeft="20dp"
                    android:id="@+id/totalHistory"
                    android:gravity="center_vertical|start"
                    android:textSize="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
            </TextView>
        </LinearLayout>

        <RelativeLayout
                android:layout_marginBottom="50dp"
                android:id="@+id/pictureListLayout"
                android:layout_marginTop="120dp"
                android:background="#eeee"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/totalLayout"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_height="match_parent"
                android:layout_width="match_parent">
            <ListView
                    android:id="@+id/pictureList"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
            </ListView>
        </RelativeLayout>

    <LinearLayout
            android:background="#eeee"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="50dp">
        <TextView
                android:id="@+id/getMorePicture"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="15dp"
                android:textColor="@color/darkseagreen"
                android:text="加载更多"
                android:layout_width="match_parent"
                android:layout_height="50dp">
        </TextView>
    </LinearLayout>










</androidx.constraintlayout.widget.ConstraintLayout>