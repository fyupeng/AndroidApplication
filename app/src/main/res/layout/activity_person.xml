<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.PersonActivity">

    <LinearLayout

            android:background="#eeee"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:background="@color/snow"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="70dp">
            <ImageView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/comeBack"
                    android:layout_gravity="center"
                    android:background="@drawable/comeback"
                    android:layout_width="25dp"
                    android:layout_height="25dp">
            </ImageView>
            <TextView
                    android:textColor="@color/darkseagreen"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:layout_gravity="center"
                    android:text="个人详情"
                    android:layout_width="310dp"
                    android:layout_height="40dp">
            </TextView>
        </LinearLayout>

        <LinearLayout
                android:background="@drawable/mybackground2"
                android:layout_width="match_parent"
                android:layout_height="150dp">
        </LinearLayout>

        <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                android:background="@drawable/linearout_ground"
                android:layout_marginTop="-50dp"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="500dp">

            <LinearLayout
                    android:gravity=""
                    android:layout_marginTop="10dp"
                    android:paddingRight="10dp"
                    android:paddingLeft="20dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                <TextView
                        android:gravity="center_vertical|start"
                        android:textSize="15dp"
                        android:text="头像"
                        android:layout_width="70dp"
                        android:layout_height="50dp">
                </TextView>
                <LinearLayout
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="45dp">
                    <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/avatar"
                            android:layout_gravity="center_vertical|right"
                            android:src="@drawable/male"
                            android:layout_width="45dp"
                            android:layout_height="45dp">
                    </de.hdodenhof.circleimageview.CircleImageView>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                    android:paddingRight="10dp"
                    android:paddingLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                <TextView
                        android:gravity=""
                        android:textSize="15dp"
                        android:text="用户id"
                        android:layout_width="70dp"
                        android:layout_height="50dp">
                </TextView>
                <TextView
                        android:gravity="center_vertical|right"
                        android:id="@+id/userid"
                        android:textSize="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp">
                </TextView>
            </LinearLayout>

            <LinearLayout
                    android:paddingRight="10dp"
                    android:paddingLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                <TextView
                        android:gravity=""
                        android:textSize="15dp"
                        android:text="名称"
                        android:layout_width="70dp"
                        android:layout_height="50dp">
                </TextView>
                <EditText
                        android:textSize="15dp"
                        android:textAlignment="textEnd"
                        android:textColor="@color/lightslategray"
                        android:id="@+id/nickname"
                        android:background="@color/colourless"
                        android:layout_width="match_parent"
                        android:layout_height="45dp">
                </EditText>
            </LinearLayout>

            <LinearLayout
                    android:paddingRight="20dp"
                    android:paddingLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                <TextView
                        android:gravity=""
                        android:textSize="15dp"
                        android:text="性别"
                        android:layout_width="70dp"
                        android:layout_height="50dp">
                </TextView>
                <EditText
                        android:textSize="15dp"
                        android:onClick="setReadOnly"
                        android:textAlignment="textEnd"
                        android:textColor="@color/lightslategray"
                        android:id="@+id/sex"
                        android:background="@color/colourless"
                        android:layout_width="match_parent"
                        android:layout_height="45dp">
                </EditText>
            </LinearLayout>

            <LinearLayout
                    android:paddingRight="10dp"
                    android:paddingLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                <TextView
                        android:gravity=""
                        android:textSize="15dp"
                        android:text="邮箱"
                        android:layout_width="70dp"
                        android:layout_height="50dp">
                </TextView>
                <EditText
                        android:textSize="15dp"
                        android:textAlignment="textEnd"
                        android:textColor="@color/lightslategray"
                        android:id="@+id/email"
                        android:background="@color/colourless"
                        android:layout_width="match_parent"
                        android:layout_height="45dp">
                </EditText>
            </LinearLayout>

            <LinearLayout
                    android:paddingRight="10dp"
                    android:paddingLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                <TextView
                        android:gravity=""
                        android:textSize="15dp"
                        android:text="电话"
                        android:layout_width="70dp"
                        android:layout_height="50dp">
                </TextView>
                <EditText
                        android:textSize="15dp"
                        android:textAlignment="textEnd"
                        android:textColor="@color/lightslategray"
                        android:id="@+id/telephone"
                        android:background="@color/colourless"
                        android:layout_width="match_parent"
                        android:layout_height="45dp">
                </EditText>
            </LinearLayout>

            <LinearLayout
                    android:paddingRight="10dp"
                    android:paddingLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="100dp">
                <TextView
                        android:layout_gravity="start"
                        android:textSize="15dp"
                        android:text="简介"
                        android:layout_width="70dp"
                        android:layout_height="100dp">
                </TextView>
                <EditText
                        android:gravity="end"
                        android:textSize="13dp"
                        android:textAlignment="textEnd"
                        android:textColor="@color/lightslategray"
                        android:id="@+id/description"
                        android:background="@color/colourless"
                        android:layout_width="match_parent"
                        android:layout_height="100dp">
                </EditText>
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>