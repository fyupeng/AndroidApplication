<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.UpdatePwdActivity">
·
    <LinearLayout
            android:background="#eeee"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:background="@color/snow"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="70dp">
            <ImageView
                    android:id="@+id/comeBack"
                    android:layout_gravity="center"
                    android:background="@drawable/comeback"
                    android:layout_width="25dp"
                    android:layout_height="25dp">
            </ImageView>
            <TextView
                    android:textColor="@color/darkseagreen"
                    android:layout_marginLeft="15dp"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:layout_gravity="center"
                    android:text="修改密码"
                    android:layout_width="310dp"
                    android:layout_height="40dp">
            </TextView>
        </LinearLayout>

        <LinearLayout
                android:background="@drawable/sunflower"
                android:layout_width="match_parent"
                android:layout_height="150dp">
        </LinearLayout>

        <LinearLayout
                android:layout_gravity="center"
                android:background="@color/whitesmoke"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="280dp">
            <LinearLayout
                    android:paddingRight="20dp"
                    android:paddingLeft="10dp"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="70dp">
                <TextView
                        android:gravity="center_vertical|start"
                        android:textSize="15dp"
                        android:text="用户名："
                        android:layout_gravity="center_vertical"
                        android:layout_width="70dp"
                        android:layout_height="50dp">
                </TextView>
                <EditText
                        android:textSize="15dp"
                        android:id="@+id/updateUsername"
                        android:hint="请输入用户名"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:layout_width="220dp"
                        android:layout_height="50dp">
                </EditText>
            </LinearLayout>
            <LinearLayout
                    android:paddingRight="20dp"
                    android:paddingLeft="10dp"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="70dp">
                <TextView
                        android:gravity="center_vertical|start"
                        android:textSize="15dp"
                        android:text="原密码："
                        android:layout_gravity="center_vertical"
                        android:layout_width="70dp"
                        android:layout_height="50dp">
                </TextView>
                <EditText
                        android:textSize="15dp"
                        android:inputType="textPassword"
                        android:id="@+id/oldPwd"
                        android:hint="请输入原密码"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:layout_width="220dp"
                        android:layout_height="50dp">
                </EditText>
                <ImageView
                        android:id="@+id/eyes1"
                        android:layout_marginLeft="14dp"
                        android:src="@drawable/closeyes"
                        android:layout_gravity="center"
                        android:layout_width="24dp"
                        android:layout_height="24dp">
                </ImageView>
            </LinearLayout>
            <LinearLayout
                    android:paddingRight="20dp"
                    android:paddingLeft="10dp"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="70dp">
                <TextView
                        android:gravity="center_vertical|start"
                        android:textSize="15dp"
                        android:text="新密码："
                        android:layout_gravity="center_vertical"
                        android:layout_width="70dp"
                        android:layout_height="50dp">
                </TextView>
                <EditText
                        android:textSize="15dp"
                        android:inputType="textPassword"
                        android:id="@+id/newPwd"
                        android:hint="请输入新密码"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:layout_width="220dp"
                        android:layout_height="50dp">
                </EditText>
                <ImageView
                        android:id="@+id/eyes2"
                        android:layout_marginLeft="14dp"
                        android:src="@drawable/closeyes"
                        android:layout_gravity="center"
                        android:layout_width="24dp"
                        android:layout_height="24dp">
                </ImageView>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="400dp"
                    android:layout_height="40dp">
                <Button
                        android:textSize="18dp"
                        android:background="@color/lightgreen"
                        android:id="@+id/certainUpdate"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:text="确认"
                        android:layout_width="150dp"
                        android:layout_height="40dp">
                </Button>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>