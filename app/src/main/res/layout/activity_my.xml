<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.MyActivity">

    <LinearLayout
            android:background="#eeee"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:background="@color/snow"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="70dp">
            <ImageView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/comeBack"
                    android:layout_gravity="center"
                    android:background="@drawable/comeback"
                    android:layout_width="25dp"
                    android:layout_height="25dp">
            </ImageView>
            <TextView
                    android:textColor="@color/darkseagreen"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:layout_gravity="center"
                    android:text="我的"
                    android:layout_width="310dp"
                    android:layout_height="40dp">
            </TextView>
        </LinearLayout>

        <LinearLayout
                android:background="@drawable/mybackground"
                android:layout_width="match_parent"
                android:layout_height="150dp">
        </LinearLayout>

        <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/linearout_ground"
                android:orientation="vertical"
                android:layout_marginTop="-50dp"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="500dp">

            <LinearLayout
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="100dp">
                <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_marginLeft="20dp"
                        android:id="@+id/avatar"
                        android:layout_gravity="center"
                        android:src="@drawable/male"
                        android:layout_width="50dp"
                        android:layout_height="50dp">
                </de.hdodenhof.circleimageview.CircleImageView>
                <LinearLayout
                        android:layout_marginLeft="20dp"
                        android:orientation="vertical"
                        android:layout_width="250dp"
                        android:layout_height="100dp">
                    <TextView
                            android:id="@+id/nickname"
                            android:gravity="center"
                            android:textSize="18dp"
                            android:text=""
                            android:layout_width="200dp"
                            android:layout_height="50dp">
                    </TextView>
                    <TextView
                            android:textSize="15dp"
                            android:id="@+id/desc"
                            android:text="这家伙很懒，什么都没有留下!"
                            android:layout_width="250dp"
                            android:layout_height="50dp">
                    </TextView>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                    android:paddingLeft="20dp"
                    android:id="@+id/personIntro"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                <TextView
                        android:textColor="@color/darkseagreen"
                        android:gravity="center_vertical"
                        android:textSize="15dp"
                        android:text="个人详情"
                        android:layout_width="100dp"
                        android:layout_height="50dp">
                </TextView>
                <LinearLayout
                        android:layout_gravity="center"
                        android:paddingRight="20dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="30dp">
                    <ImageView
                            android:layout_gravity="center_vertical|right"
                            android:background="@drawable/enter"
                            android:layout_width="30dp"
                            android:layout_height="30dp">
                    </ImageView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                    android:paddingLeft="20dp"
                    android:id="@+id/captureHistory"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                <TextView
                        android:textColor="@color/darkseagreen"
                        android:gravity="center_vertical"
                        android:textSize="15dp"
                        android:text="拍照历史"
                        android:layout_width="100dp"
                        android:layout_height="50dp">
                </TextView>
                <LinearLayout
                        android:layout_gravity="center"
                        android:paddingRight="20dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="30dp">
                    <ImageView
                            android:layout_gravity="center_vertical|right"
                            android:background="@drawable/enter"
                            android:layout_width="30dp"
                            android:layout_height="30dp">
                    </ImageView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                    android:paddingLeft="20dp"
                    android:id="@+id/updatePwd"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                <TextView
                        android:textColor="@color/darkseagreen"
                        android:gravity="center_vertical"
                        android:textSize="15dp"
                        android:text="修改密码"
                        android:layout_width="100dp"
                        android:layout_height="50dp">
                </TextView>
                <LinearLayout
                        android:layout_gravity="center"
                        android:paddingRight="20dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="30dp">
                    <ImageView
                            android:layout_gravity="center_vertical|right"
                            android:background="@drawable/enter"
                            android:layout_width="30dp"
                            android:layout_height="30dp">
                    </ImageView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                    android:paddingLeft="20dp"
                    android:id="@+id/goLogin"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                <TextView
                        android:textColor="@color/darkseagreen"
                        android:gravity="center_vertical"
                        android:textSize="15dp"
                        android:text="前往登录"
                        android:layout_width="100dp"
                        android:layout_height="50dp">
                </TextView>
                <LinearLayout
                        android:layout_gravity="center"
                        android:paddingRight="20dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="30dp">
                    <ImageView
                            android:layout_gravity="center_vertical|right"
                            android:background="@drawable/enter"
                            android:layout_width="30dp"
                            android:layout_height="30dp">
                    </ImageView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                    android:paddingLeft="20dp"
                    android:id="@+id/logout"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                <TextView
                        android:textColor="@color/darkseagreen"
                        android:gravity="center_vertical"
                        android:textSize="15dp"
                        android:text="注销"
                        android:layout_width="100dp"
                        android:layout_height="50dp">
                </TextView>
                <LinearLayout
                        android:layout_gravity="center"
                        android:paddingRight="20dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="30dp">
                    <ImageView
                            android:layout_gravity="center_vertical|right"
                            android:background="@drawable/enter"
                            android:layout_width="30dp"
                            android:layout_height="30dp">
                    </ImageView>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>